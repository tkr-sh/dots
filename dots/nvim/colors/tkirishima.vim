hi clear

if exists("syntax on")
syntax reset
endif

set t_Co=256
let g:colors_name = "black"


" Define reusable colorvariables.
let s:bg="#181f34"
let s:fg="#afcabd"
let s:fg2="#a1baae"
let s:fg3="#93aa9f"
let s:fg4="#859a90"
let s:bg2="#2a3144"
