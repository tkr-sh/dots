let s:builtin="#c00732"
let s:const= "#cb76bc"
let s:comment="#47547d"
let s:func="#66eab1"
let s:str="#dead9c"
let s:type="#ba177e"
let s:var="#675cc4"
let s:warning="#ff0000"
let s:warningbg="#481f34"
let s:warning2="#ff8800"
let s:warning2bg="#443f30"



exe 'hi Normal guifg='s:fg' guibg='s:bg
exe 'hi Cursor guifg='s:bg' guibg='s:warning
